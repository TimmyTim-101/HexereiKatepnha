<Window x:Class="HexereiKatepnha.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HexereiKatepnha"
        xmlns:ViewModels="clr-namespace:HexereiKatepnha.ViewModels"
        xmlns:Views="clr-namespace:HexereiKatepnha.Views"
        mc:Ignorable="d"
        Title="魔导Katep&#x438;Ha" Height="1080" Width="1920"
        WindowStartupLocation="CenterScreen"
        Icon="Resources/Icons/Icon-maskable-512.png"
        FontFamily="{StaticResource MyFont}">
    <Window.Resources>
        <!-- 0 - 其余 -->
        <DataTemplate DataType="{x:Type ViewModels:NavigationViewModel}">
            <Views:NavigationView />
        </DataTemplate>
        <!-- 1 - 主页 -->
        <DataTemplate DataType="{x:Type ViewModels:HomeViewModel}">
            <Views:HomeView />
        </DataTemplate>
        <!-- 2 - 背包 -->
        <DataTemplate DataType="{x:Type ViewModels:Backpack1CharacterViewModel}">
            <Views:Backpack1CharacterView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModels:Backpack2WeaponViewModel}">
            <Views:Backpack2WeaponView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModels:Backpack3ArtifactsViewModel}">
            <Views:Backpack3ArtifactsView />
        </DataTemplate>
        <!-- 3 - 计算器 -->
        <!-- 4 - 数据库 -->
        <!-- -1 - 设置 -->
        <DataTemplate DataType="{x:Type ViewModels:SettingsViewModel}">
            <Views:SettingsView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!-- 导航栏 -->
        <ContentControl Grid.Column="0" Content="{Binding CurrentNavigationViewModel}" Margin="0"></ContentControl>
        <!-- 内容页 -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentContentViewModel}" Margin="0" />
    </Grid>
</Window>