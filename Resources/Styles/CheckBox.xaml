<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ModernCheckBoxStyle" TargetType="{x:Type CheckBox}">
        <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Padding" Value="4,0,0,0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">
                    <Grid x:Name="templateRoot" Background="Transparent" SnapsToDevicePixels="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- 勾选框外壳 -->
                        <Border x:Name="checkBoxBorder"
                                Width="22" Height="22"
                                CornerRadius="5"
                                Background="Transparent"
                                BorderBrush="#AAAAAA"
                                BorderThickness="1"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}">

                            <!-- 勾选标记 (默认隐藏) -->
                            <Path x:Name="optionMark"
                                  Data="M 3,9 L 7,13 L 15,5"
                                  Stroke="White"
                                  StrokeThickness="2"
                                  Stretch="None"
                                  Visibility="Collapsed"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center" />
                        </Border>

                        <!-- 文字内容 -->
                        <ContentPresenter x:Name="contentPresenter"
                                          Grid.Column="1"
                                          Focusable="False"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          Margin="{TemplateBinding Padding}"
                                          RecognizesAccessKey="True"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- 鼠标悬停 -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="checkBoxBorder" Property="BorderBrush" Value="#FFFFFF" />
                            <Setter Property="Foreground" Value="#FFFFFF" />
                        </Trigger>

                        <!-- 选中状态 -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="optionMark" Property="Visibility" Value="Visible" />
                            <Setter TargetName="checkBoxBorder" Property="Background" Value="#1E90FF" /> <!-- 选中后的主题色，可改为 {DynamicResource PrimaryColor} -->
                            <Setter TargetName="checkBoxBorder" Property="BorderBrush" Value="#1E90FF" />
                        </Trigger>

                        <!-- 第三状态 (半选) -->
                        <Trigger Property="IsChecked" Value="{x:Null}">
                            <Setter TargetName="optionMark" Property="Data" Value="M 4,9 L 14,9" /> <!-- 显示一横 -->
                            <Setter TargetName="optionMark" Property="Visibility" Value="Visible" />
                            <Setter TargetName="checkBoxBorder" Property="Background" Value="#555555" />
                        </Trigger>

                        <!-- 禁用状态 -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="checkBoxBorder" Property="Opacity" Value="0.5" />
                            <Setter TargetName="contentPresenter" Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>