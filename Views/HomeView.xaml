<UserControl x:Class="HexereiKatepnha.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HexereiKatepnha.Views"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1720"
             FontFamily="{StaticResource MyFont}">
    <Grid Background="#0A1432">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding Title}" FontSize="32" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" />
            <TextBlock Text="{Binding WelcomeText}" FontSize="18" Foreground="#666" Margin="0,20,0,0" HorizontalAlignment="Center" />
            <TextBlock Text="这里演示了内容区域的切换" FontSize="14" Foreground="#999" Margin="0,10,0,0" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>